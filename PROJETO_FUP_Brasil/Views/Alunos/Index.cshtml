@model IEnumerable<Remake_FUP.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datanascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Mensalidade)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Cursos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datanascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Cursos.ValorCurso)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Cursos.NomeCurso)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id_Matricula">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id_Matricula">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id_Matricula">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
